#monit procmatch ".*/usr/lib/jvm/java-7-openjdk-amd64/bin/java -Dzookeeper*"
check process zookeeper
	with matching ".*/usr/lib/jvm/java-7-openjdk-amd64/bin/java -Dzookeeper*"
	start program = "/usr/local/bin/supervisorctl start zookeeper_server:"
	stop program = "/usr/local/bin/supervisorctl stop zookeeper_server:"